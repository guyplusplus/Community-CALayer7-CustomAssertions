{
  "$id": "https://example.com/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "description": "The person's first name.",
      "xml": {
        "name": "FIRST_NAME"
      }
    },
    "middleName": {
      "type": "string",
      "description": "The person's middle name.",
      "xml": {
        "name": "MIDDLE_NAME",
        "attribute": true
      }
    },
    "lastName": {
      "type": "string",
      "description": "The person's last name."
    },
    "relationshipExample": {
      "type": "object",
      "properties": {
        "personName": {
          "type": "string"
        },
        "relationshipType": {
          "type": "string"
        }
      }
    },
    "address1": {
      "type": "string",
      "xml": {
        "name": "ADDR1",
        "namespace": "http://example.com/schema/sample",
        "prefix": "sample"
      }
    },
    "phones1": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "phones2": {
      "type": "array",
      "items": {
        "type": "string",
        "xml": {
          "name": "PHONE_2"
        }
      },
      "xml": {
        "name": "PHONES_2"
      }
    },
    "phones3": {
      "type": "array",
      "items": {
        "type": "string",
        "xml": {
          "name": "PHONE_3"
        }
      },
      "xml": {
        "name": "PHONES_3",
        wrapped: true
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "personName": {
            "type": "string"
          },
          "relationshipType": {
            "type": "string"
          }
        }
      }
    },
    "age": {
      "description": "Age in years which must be equal to or greater than zero.",
      "type": "integer",
      "minimum": 0
    }
  },
  "xml": {
    "name": "MY_ROOT"
  }
}